body
	text-align center
	background #33
	font-family arial, sans-serif	
h1
	color #fff

.listSongs,.reproductor
	background #fff
	padding 5px	
	width 500px
	min-height 200px
	display block 	
	margin 10px auto
	ul
		list-style none
		text-align left
		li
			display block
			margin-bottom 5px
			font-style normal
			font-size 13px
			padding 4px
			cursor pointer
			&:hover
				background #333	
			span.iconPP
				background #E4E4E4
				color #333
				width 10px
				height 10px
				padding 2px 7px 2px 7px
				border-radius 50%
				font-weight bold
				margin-right 5px
				&:hover
					background #fff
					color #333
			.playing
				background orange !important
	video,audio									
		width 100%
		height 100%	
		margin 0
	audio						
		display block
		padding-top 120px		
.reproductor					
	background-size cover
	padding 0	